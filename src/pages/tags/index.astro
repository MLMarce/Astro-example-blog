---
import BaseLayout from "../../layouts/BaseLayout.astro";
const allPosts = await Astro.glob('../posts/*.md')
const allTagsArr = [...new Set(allPosts.map(post => post.frontmatter.tags).flat())]
console.log(allTagsArr)
---

<BaseLayout pageTitle="Tags" >
    <ul>
        {allTagsArr.map(tag => <li><a href=`/tags/${tag}` ># {tag}</a></li>)}
    </ul>
</BaseLayout>