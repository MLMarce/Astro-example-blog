---
import Navigation from "./Navigation.astro";
import Hamburger from "./Hamburger.astro";
---

<header>
    <Hamburger />
    <Navigation />
</header>

<style>
  header {
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 40px;
    backdrop-filter: blur(50px);

    nav {
      font-weight: 600;

      a {
        padding: 6px 10px;
        &:focus {
          background: hsl(234, 30%, 20%);
        }
      }
    }
  }
</style>
